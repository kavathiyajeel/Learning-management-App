<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_students"
    android:orientation="vertical"
    android:background="@color/white">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/as_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:shapeAppearance="@style/circle"
        app:srcCompat="@drawable/ic_dp_cropped" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">
            <!--            Full-name-->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/as_fullname_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_id_card"
                    app:startIconTint="@color/bg"
                    app:hintTextColor="@color/bg"
                    app:counterTextColor="@color/bg"
                    app:boxStrokeColor="@color/bg"
                    android:textColorHint="@color/bg"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/full_name"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/as_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"

                        android:textColor="@color/bg" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <!--            username-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/as_username_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_username"
                    app:startIconTint="@color/bg"
                    app:hintTextColor="@color/bg"
                    app:counterTextColor="@color/bg"
                    app:boxStrokeColor="@color/bg"
                    android:textColorHint="@color/bg"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/username"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/as_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"

                        android:textColor="@color/bg"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <!--            Email-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/as_email_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/bg"
                    app:hintTextColor="@color/bg"
                    app:counterTextColor="@color/bg"
                    app:boxStrokeColor="@color/bg"
                    android:textColorHint="@color/bg"
                    app:helperTextEnabled="true"
                    app:helperText="* Please Enter Organization Email Address"
                    app:helperTextTextColor="@color/red"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/email"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/as_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/bg"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <!--            password-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/as_password_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_password"
                    app:startIconTint="@color/bg"
                    app:hintTextColor="@color/bg"
                    app:counterTextColor="@color/bg"
                    app:boxStrokeColor="@color/bg"
                    android:textColorHint="@color/bg"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/bg"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/password"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/as_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/bg"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <!--            confirm-password-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/as_cpassword_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_cpassword"
                    app:startIconTint="@color/bg"
                    app:hintTextColor="@color/bg"
                    app:counterTextColor="@color/bg"
                    app:boxStrokeColor="@color/bg"
                    android:textColorHint="@color/bg"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/bg"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/confirm_password"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/as_cpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/bg"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <!--            Gender-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_gender_1"
                    android:layout_gravity="center"
                    />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/as_radiogroup"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/as_male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/bg"
                        android:checked="true"
                        android:padding="10dp"
                        android:text="@string/male"
                        android:textColor="@color/bg"
                        app:useMaterialThemeColors="true" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/as_female"
                        android:text="@string/female"
                        android:padding="10dp"
                        android:buttonTint="@color/bg"
                        android:textColor="@color/bg"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>

            <!--            DOB  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/as_dob_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_dob"
                    app:startIconTint="@color/bg"
                    app:hintTextColor="@color/bg"
                    app:counterTextColor="@color/bg"
                    app:boxStrokeColor="@color/bg"
                    android:textColorHint="@color/bg"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/date_of_birth"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/as_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:textColor="@color/bg"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <!--            Mobile no-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/as_phone_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_contacts"
                    app:startIconTint="@color/bg"
                    app:hintTextColor="@color/bg"
                    app:counterTextColor="@color/bg"
                    app:boxStrokeColor="@color/bg"
                    android:textColorHint="@color/bg"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/phone_number"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/as_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/bg"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <!--            semester   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/as_semester_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_semester__1_"
                    app:startIconTint="@color/bg"
                    app:hintTextColor="@color/bg"
                    app:counterTextColor="@color/bg"
                    app:boxStrokeColor="@color/bg"

                    android:textColorHint="@color/bg"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/_sem">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/as_semester"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/bg" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!--            class   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/as_division_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_class"
                    app:startIconTint="@color/bg"
                    app:hintTextColor="@color/bg"
                    app:counterTextColor="@color/bg"
                    app:boxStrokeColor="@color/bg"
                    android:textColorHint="@color/bg"
                    app:helperTextEnabled="true"
                    app:helperText="*Ex : IT-A"
                    app:helperTextTextColor="@color/red"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/class1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/as_division"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/bg" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!--            &lt;!&ndash;            Branch&ndash;&gt;-->
            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="horizontal"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:gravity="center">-->

            <!--                <ImageView-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:layout_gravity="center"-->
            <!--                    android:src="@drawable/ic_branch" />-->


            <!--                <Spinner-->
            <!--                    android:id="@+id/as_branch"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="40dp"-->
            <!--                    android:backgroundTint="@color/bg"-->
            <!--                    android:layout_marginStart="7dp"-->

            <!--                    />-->

            <!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/as_branch_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_branch"
                    app:startIconTint="@color/bg"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="@color/bg"
                    app:counterTextColor="@color/bg"
                    app:boxStrokeColor="@color/bg"
                    android:textColorHint="@color/bg"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:hint="@string/branch">

                    <AutoCompleteTextView
                        android:id="@+id/as_branch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        app:simpleItems="@array/branch"
                        android:textColor="@color/bg" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/as_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/bg"
                android:elevation="5dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:paddingHorizontal="38dp"
                android:paddingVertical="15dp"
                android:text="@string/add_students"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                />



        </LinearLayout>
    </ScrollView>

</LinearLayout>